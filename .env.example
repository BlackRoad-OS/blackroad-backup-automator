# BlackRoad Backup Automator - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# CLOUD SERVICES
# =============================================================================

# Cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id

# Vercel
VERCEL_TOKEN=your_vercel_token

# Digital Ocean
DIGITALOCEAN_TOKEN=your_digitalocean_token

# =============================================================================
# CRM & BUSINESS
# =============================================================================

# Salesforce OAuth2
SF_CLIENT_ID=your_salesforce_client_id
SF_CLIENT_SECRET=your_salesforce_client_secret
SF_USERNAME=your_salesforce_username
SF_PASSWORD=your_salesforce_password
SF_SECURITY_TOKEN=your_salesforce_security_token
SF_INSTANCE_URL=https://yourinstance.salesforce.com

# =============================================================================
# AI SERVICES
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# VERSION CONTROL
# =============================================================================

# GitHub
GITHUB_TOKEN=your_github_personal_access_token

# =============================================================================
# HARDWARE / RASPBERRY PI CLUSTER
# =============================================================================

# Pi Cluster IPs (adjust to your network)
PI_MASTER_HOST=192.168.1.100
PI_WORKER_1_HOST=192.168.1.101
PI_WORKER_2_HOST=192.168.1.102
PI_WORKER_3_HOST=192.168.1.103

# SSH Key path for Pi access
PI_SSH_KEY=/path/to/your/pi_ssh_key

# =============================================================================
# TERMINAL TOOLS
# =============================================================================

# Termius (optional)
TERMIUS_API_KEY=your_termius_api_key

# =============================================================================
# ADDITIONAL SERVICES
# =============================================================================

# Add any additional service credentials here
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# NOTION_API_KEY=
# SLACK_WEBHOOK_URL=
